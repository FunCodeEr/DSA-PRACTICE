#include<bits/stdc++.h>
using namespace std;
int main(){
	int t;
	cin>>t;
	while(t--){
		int n;
		cin>>n;
		string s;
		cin>>s;
		long long int result = 0;
		long long int power_of_two = 1;
		int i = 0;
		for( i= (s.size()-1); i>=0; --i){
			int s_digit = (s[i] - '0');
			result = result + (s_digit*power_of_two);
			power_of_two = power_of_two*2;
			
			
		}
		cout<<power_of_two<<endl;
		  
	}
}

